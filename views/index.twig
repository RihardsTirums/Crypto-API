{% extends "layout.twig" %}

{% block title %}Crypto{% endblock %}
{% block content %}
    <div class="container mt-5 m-0 p-0">
        <form action="/search" method="get" class="w-25 mb-5">
            <div class="input-group ms-3">
                <input type="text" name="query" class="form-control rounded-0 py-2" placeholder="Search" aria-label="Search query" aria-describedby="button-addon2">
                <button class="btn btn-primary rounded-0" type="submit">Search</button>
            </div>
        </form>
        <table class="table" style="background-color: lightblue; width: 2000px">
            <thead>
            <tr class="text-secondary text-uppercase">
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th class="ps-3" scope="col">1h %</th>
                <th class="ps-3" scope="col">24h %</th>
                <th class="ps-4" scope="col">7d %</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for key, coin in coins %}
                <tr>
                    <th class="text-secondary" scope="row">{{ key+1 }}</th>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="{{ coin.logo }}" alt="logo {{ coin.id }}" class="rounded-circle me-3 img-fluid" width="40px">
                            <small class="m-0">{{ coin.name }} <span class="badge bg-success rounded-0">{{ coin.symbol }}</span></small>
                        </div>
                    </td>
                    <td class="align-middle small"><span>${{ coin.price|number_format(2) }}</span></td>
                    <td class="align-middle small">
                        <span class="{{ coin.percentChange1h >=0 ? 'text-success' : 'text-danger' }}">
                        {% if coin.percentChange1h >= 0 %}
                            <i class="icon-chevron-up"></i>
                        {% else %}
                            <i class="icon-chevron-down"></i>
                        {% endif %}
                            {{ coin.percentChange1h|number_format(2) }}%
                        </span>
                    </td>
                    <td class="align-middle small">
                        <span class="{{ coin.percentChange24h >=0 ? 'text-success' : 'text-danger' }}">
                        {% if coin.percentChange24h >= 0 %}
                            <i class="icon-chevron-up"></i>
                        {% else %}
                            <i class="icon-chevron-down"></i>
                        {% endif %}
                            {{ coin.percentChange24h|number_format(2) }}%
                        </span>
                    </td>
                    <td class="align-middle small">
                        <span class="{{ coin.percentChange7d >=0 ? 'text-success' : 'text-danger' }}">
                        {% if coin.percentChange7d >= 0 %}
                            <i class="icon-chevron-up"></i>
                        {% else %}
                            <i class="icon-chevron-down"></i>
                        {% endif %}
                            {{ coin.percentChange7d|number_format(2) }}%
                        </span>
                    </td>
                    <td class="align-middle"><a class="btn btn-outline-primary rounded-0" href="/coin/{{ coin.id }}">Buy&Sell</a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

