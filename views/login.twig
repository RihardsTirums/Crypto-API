{% extends "layout.twig" %}

{% block title %}Login{% endblock %}
{% block content %}
    <section class="vh-100" style="background-image: linear-gradient(to right top, #051937, #004d7a, #008793, #00bf72, #a8eb12);">
    <div class="mask d-flex align-items-center h-100 gradient-custom-3">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h1 class="text-center h1 mb-5 mx-1 mx-md-4 mt-4">Log in</h1>
                            <form action="/login" method="post">
                                <div class="form-outline mb-3">
                                    <label class="form-label text-secondary" for="form3Example3">Email address</label>
                                    <input type="email" id="form3Example3" class="form-control rounded-3 border border-primary py-2 {{ errors.email ? 'is-invalid' }}"
                                           placeholder="Enter a valid email address" name="email"/>
                                    {% if errors.email %}
                                        <div class="invalid-feedback">
                                            {{ errors.email }}
                                        </div>
                                    {% endif %}
                                </div>

                                <!-- Password input -->
                                <div class="form-outline mb-3">
                                    <label class="form-label text-secondary" for="form3Example4">Password</label>
                                    <input type="password" id="form3Example4"
                                           class="form-control rounded-3 py-2 border border-success {{ errors.password ? 'is-invalid' }}"
                                           placeholder="Enter password" name="password"/>
                                    {% if errors.password %}
                                        <div class="invalid-feedback">
                                            {{ errors.password }}
                                        </div>
                                    {% endif %}
                                </div>

                                <div class="d-flex justify-content-between align-items-center">
                                    <!-- Checkbox -->
                                    <div class="form-check mb-0">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3"/>
                                        <label class="form-check-label text-secondary" for="form2Example3">
                                            Remember me
                                        </label>
                                    </div>

                                </div>

                                <p class="small fw-bold mt-2 pt-1 mb-0 text-secondary ">No account: <a href="/register"
                                class=>Register</a>
                                </p>
                                <a href="#!" class="text-secondary text-decoration-none fs-small mt-4">Forgot password</a>

                                <div class="text-center mt-4">
                                    <button type="submit" class="btn btn-primary btn-block btn-lg gradient-custom-4 w-75 text-white"
                                            style="padding-left: 2.5rem; padding-right: 2.5rem;">Login
                                    </button>

                                </div>

                            </form>
                        </div>
                    </div>
                    </div>
                </div>
        </div>
    </div>
    </section>
{% endblock %}